doctype html
html
    head
        meta(charser="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        block title
        link(rel="stylesheet" href="assets/css/style.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
    body

        //- Header
        header.header
            .container
                .header__wrap
                    //- Menu
                    button.header__menu-mobile
                        i(class="fa-solid fa-bars")

                    //- Logo
                    .header__logo
                        a(href="index.html")
                            img(src="assets/images/Logo.svg" alt="Logo Monito")

                    //- Menu
                    nav.header__menu
                        ul
                            li
                                a(href="index.html") Trang Chủ
                            li
                                a(href="product-list.html") Danh mục
                            li
                                a(href="product-detail.html") Giới thiệu
                            li
                                a(href="#") Liên hệ

                    //- Form search
                    button.header__search-mobile
                        i(class="fa-solid fa-magnifying-glass")

                    form(action="#" class="header__form")
                        input(name="keywork" placeholder="Nhập từ khóa...")
                        button
                            i(class="fa-solid fa-magnifying-glass")

                    //- Button
                    a(href="#" class="button") Tham gia cộng đồng
        //- End Header

        //- Main
        block main
        //- End Main

        //- Footer
        footer.footer
            .container
                .footer__top
                    .footer__content Đăng ký ngay để không bỏ lỡ các chương trình của chúng tôi
                    form(class="footer__form" action="#")
                        input(type="email" name="email-address" id="eMail" placeholder="Nhập email của bạn...")
                        button Đăng Ký Ngay
                .footer__middle
                    nav.footer__middle-links
                        ul 
                            li
                                a(a href="index.html" target="_self") Trang Chủ
                            li
                                a(a href="product-list.html" target="_self") Danh Mục
                            li
                                a(href="product-detail.html" target="_self") Giới Thiệu
                            li
                                a(href="#" target="_self") Liên Hệ

                    nav.footer__socials
                        ul
                            li
                                a(a href="#" target="_blank")
                                    i(class="fa-brands fa-facebook")
                            li
                                a(href="#" target="_blank")
                                    i(class="fa-brands fa-twitter")
                            li
                                a(href="#" target="_blank")
                                    i(class="fa-brands fa-instagram")
                            li
                                a(href="#" target="_blank")
                                    i(class="fa-brands fa-youtube")
                .footer__bottom
                    .footer__copyright © 2024 28Tech. All rights reserved.
                    .footer__logo
                        a(href="index.html")
                            img(src="assets/images/Logo.svg" alt="Monito")

                    nav.footer__bottom-links
                        ul
                            li
                                a(href="#") Điều khoản dịch vụ
                            li
                                a(href="#") Chính sách bảo mật
        //- End Footer