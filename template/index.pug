        section.section1
            .container
                .section1__wrap
                    img(class="header__bg1" src="assets/images/header-bg1.svg" alt="0")

                    .section1__content

                        img(class="section1__bg1" src="assets/images/section1-bg1.svg" alt="")

                        h1.section1__title
